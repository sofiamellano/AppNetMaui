<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimeraMauiApp.Pages.InicioPages"
             Title="Inicio">
    <VerticalStackLayout BackgroundColor="{StaticResource FondoPagina}">
        <Label 
            Text="App Libros"
            FontSize="Large"
            TextColor="Black"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout>
            <Button
                Text="Libros"
                Style="{StaticResource EstiloBoton}"
                Clicked="Button_Clicked" />
            <Button
                Text="Controles Comunes" 
                x:Name="btnControlesComunes"
                Style="{StaticResource EstiloBoton}"
                Clicked="btnControlesComunes_Clicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>